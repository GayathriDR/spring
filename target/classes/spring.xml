<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation=" http://www.springframework.org/schema/beans 
	http://www.springframework.org/schema/beans/spring-beans.xsd
	http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">
	
	
	<context:component-scan base-package="com.xworkz.modem.dao, com.xworkz.modem.service"/>
	
	
	<bean class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer" id="propertyPlaceholderConfigurer">
	<property name="location" value="connection.properties"/>
	</bean>
	<import resource="datasource.xml" />
	<bean class="org.springframework.orm.hibernate5.LocalSessionFactoryBean" id="localSessionFactoryBean">
	<!--  <property name="configLocation" value="hibernate.cfg.xml"/>-->
	<property name="dataSource" ref="driverManagerDataSource"/>
	<property name="hibernateProperties">
	<props>
	<prop key="hibernate.show_sql">true</prop>
	<prop key="hibernate.hbm2ddl.auto">update</prop>
	</props>
	</property>
	<property name="annotatedClasses">
	<array>
	<value>com.xworkz.modem.entity.ModemEntity</value>
	</array>
	</property>
	</bean>
	
	<!--  <bean class="com.xworkz.shop.service.ShopServiceImpl" id="shopServiceImpl">
	<constructor-arg ref="shopDAOImpl"/>
	</bean>
	<bean class="com.xworkz.shop.DAO.ShopDAOImpl" id="shopDAOImpl">
	<property name="factory" ref="localSessionFactoryBean"/>
	</bean>
	-->
	
	</beans>